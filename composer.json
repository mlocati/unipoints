{
    "$schema": "https://raw.githubusercontent.com/composer/composer/main/res/composer-schema.json",
    "name": "mlocati/unipoints",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Michele Locati",
            "email": "michele@locati.it"
        }
    ],
    "keywords": [
        "unicode",
        "characters",
        "symbols",
        "emoji",
        "codepoint"
    ],
    "description": "A Unicode Codepoint library for PHP",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "MLUnipoints\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MLUnipoints\\Build\\": "build",
            "MLUnipoints\\Test\\": "test/tests",
            "MLUnipoints\\Test\\Service\\": "test/service"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages" : true
    },
    "scripts": {
        "phpcs": "php-cs-fixer --path-mode=intersection --config=./.php-cs-fixer.php fix .",
        "test": "phpunit --verbose"
    }
}
